{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./",
    "rootDir": "./ts-src",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./typings", "./node_modules/@types/"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["./ts-src/**/*"]
}
